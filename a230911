#include <stdio.h>

int main()
{
    int num =0;
    printf("다음 중 통일신라 시대의 도읍은 어디인지 알맞은 정답을 찾아 입력하시오.\n");
    printf(" 1. 평양 \n 2. 서라벌 \n 3. 개성 \n 4. 한양 \n 5. 전주 \n");
    printf("정답은 몇번입니까?");
    scanf("%d", &num);
    
    switch(num) {
    case 1:printf("오답입니다. 평양은 고구려의 도읍입니다.");
        break;
    case 2:printf("정답입니다. 서라벌은 통일신라의 도읍입니다.");
        break;
    case 3:printf("오답입니다. 개성은 고려의 도읍입니다.");
        break;
    case 4:printf("오답입니다. 한양은 조선의 도읍입니다.");
        break;
    case 5:printf("오답입니다. 전주는 후백제의 도읍입니다.");
        break;
  default:printf("잘못입력하셨습니다.");
        //실행내용
}

    return 0;
}
